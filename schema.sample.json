                },
                { 
                    "label": "Other", 
                    "value": "other" 
                }
            ],
            "field"	: "select"
        },		
        "file": {
            "label": "File",
            "type": "file",
            "multiple": true,
            "options": [
                "image/jpg", 
                "image/gif"
            ]
        }
    },
